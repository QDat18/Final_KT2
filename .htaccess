# File: .htaccess

# Enable Rewrite Engine
RewriteEngine On

# Set base directory
RewriteBase /

# ==========================================
# SECURITY SETTINGS
# ==========================================

# Disable directory browsing
Options -Indexes

# Prevent access to sensitive files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect .htaccess file
<Files .htaccess>
    Order allow,deny
    Deny from all
</Files>

# Protect config files
<FilesMatch "\.(env|ini|log|sh|sql|bak)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# ==========================================
# PERFORMANCE SETTINGS
# ==========================================

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType application/pdf "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
</IfModule>

# ==========================================
# CLEAN URL REWRITE RULES
# ==========================================

# Skip rewrite for existing files
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Product routes
# /products -> index.php?controller=product&action=index
RewriteRule ^products/?$ index.php?controller=product&action=index [L,QSA]

# /products/create -> index.php?controller=product&action=create
RewriteRule ^products/create/?$ index.php?controller=product&action=create [L,QSA]

# /products/import -> index.php?controller=product&action=import
RewriteRule ^products/import/?$ index.php?controller=product&action=import [L,QSA]

# /products/export-template -> index.php?controller=product&action=export_template
RewriteRule ^products/export-template/?$ index.php?controller=product&action=export_template [L,QSA]

# /products/{id} -> index.php?controller=product&action=edit&id={id}
RewriteRule ^products/([0-9]+)/?$ index.php?controller=product&action=edit&id=$1 [L,QSA]

# /products/{id}/delete -> index.php?controller=product&action=delete&id={id}
RewriteRule ^products/([0-9]+)/delete/?$ index.php?controller=product&action=delete&id=$1 [L,QSA]

# Variant routes
# /variants/create -> index.php?controller=variant&action=ajax_store
RewriteRule ^variants/create/?$ index.php?controller=variant&action=ajax_store [L,QSA]

# /variants/{id} -> index.php?controller=variant&action=ajax_update&id={id}
RewriteRule ^variants/([0-9]+)/?$ index.php?controller=variant&action=ajax_update&id=$1 [L,QSA]

# /variants/{id}/delete -> index.php?controller=variant&action=ajax_delete&id={id}
RewriteRule ^variants/([0-9]+)/delete/?$ index.php?controller=variant&action=ajax_delete&id=$1 [L,QSA]

# Image routes
# /images/create -> index.php?controller=image&action=ajax_store
RewriteRule ^images/create/?$ index.php?controller=image&action=ajax_store [L,QSA]

# /images/{id}/delete -> index.php?controller=image&action=ajax_delete&id={id}
RewriteRule ^images/([0-9]+)/delete/?$ index.php?controller=image&action=ajax_delete&id=$1 [L,QSA]

# ==========================================
# ERROR PAGES
# ==========================================

ErrorDocument 404 /404.html
ErrorDocument 500 /500.html

# ==========================================
# PHP SETTINGS
# ==========================================

<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
    php_flag display_errors Off
    php_flag log_errors On
</IfModule>

# ==========================================
# UTF-8 ENCODING
# ==========================================

AddDefaultCharset UTF-8
<IfModule mod_mime.c>
    AddCharset UTF-8 .html .css .js .xml .json .rss .atom
</IfModule>